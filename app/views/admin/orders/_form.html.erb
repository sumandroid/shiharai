<%= f.label_tag "Select Product"%>
<%= f.select(:order_line_items, options_for_select(LineItem.all.map { |li| [li.title, li.id, { 'data-amount' => li.amount }]}), {}, {class: "form-control product_select_dropdown"} ) %>
<%= f.label_tag :user, "Select User"%>
<%= f.select(:user, options_for_select(@users.map { |user| [user.name, user.id, { 'data-email' => user.email, 'data-phone' => user.phone }]}), {}, {class: "form-control user_select_dropdown"} ) %>